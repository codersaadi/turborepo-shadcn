{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:clear": "NODE_ENV='development' tsx ./src/clear.ts",
    "check-types": "tsc --noEmit",
    "db:studio": "drizzle-kit studio",
    "lint": "biome check . --write",
    "db:push": "drizzle-kit push",
    "db:seed": "DATABASE_URL='postgresql://postgres:Saadsaad1@localhost:5432/saas_pack' tsx ./src/seeding/main.ts",
    "db:reset": "pnpm db:clear && pnpm db:generate && pnpm db:migrate"
  },
  "dependencies": {
    "@repo/env": "workspace:*",
    "drizzle-orm": "^0.36.4",
    "pg": "^8.13.1",
    "postgres": "^3.4.5",
    "slugify": "^1.6.6",
    "stripe": "^17.4.0",
    "unique-names-generator": "^4.7.1"
  },
  "devDependencies": {
    "@tooling/biome-config": "workspace:*",
    "@tooling/typescript-config": "workspace:*",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.28.1",
    "typescript": "5.5.4",
    "uuid": "^11.0.3"
  },
  "exports": {
    ".": [
      "./src/index.ts"
    ],
    "./schema": [
      "./src/schema.ts"
    ],
    "./data/*": [
      "./src/data/*.ts",
      "./src/data/*.js"
    ],
    "./usecases/*": [
      "./src/usecases/*.ts",
      "./src/usecases/*.js"
    ]
  }
}
